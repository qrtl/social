<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_iap_custom" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="iap.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iap_portal']" position="inside">
                <div class='row mt16 o_settings_container'>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class='o_setting_right_pane'>
                            <label
                                for="mail_domain_blacklist"
                                class="o_form_label"
                            >Email Domain Blacklist</label>
                            <field
                                name="mail_domain_blacklist"
                                placeholder="e.g., outlook.jp, sampledomain.net"
                            />
                            <div class="text-muted">
                                Enter domains to blacklist, separated by commas
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
